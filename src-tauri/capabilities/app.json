{
	"$schema": "../gen/schemas/macOS-schema.json",
	"identifier": "app",
	"description": "Permissions for the entire app",
	"local": true,
	"windows": [
		"main"
	],
	"platforms": [
		"macOS"
	],
	"permissions": [
		"updater:default",
		"core:default",
		"core:window:allow-start-dragging",
		"core:window:allow-set-focus",
		"core:app:allow-default-window-icon",
		"core:window:allow-hide",
		"core:window:allow-show",
		"fs:default",
		"fs:allow-watch",
		"fs:allow-unwatch",
		"fs:allow-remove",
		"fs:allow-exists",
		{
			"identifier": "fs:scope",
			"allow": [
				{ "path": "$HOME/**/*" }
			]
		},
		"shell:default",
		"shell:allow-open",
		{
			"identifier": "shell:allow-execute",
			"allow": [
				{
					"name": "rm",
					"cmd": "rm",
					"args": true
				}
			]
		},
		"os:allow-locale",
		"dialog:default",
		"dialog:allow-ask",
		"dialog:allow-confirm",
		"notification:default",
		"log:allow-log",
		"log:default"
	]
}
